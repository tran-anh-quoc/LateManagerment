<div class="col-lg-12">
    <div class="panel panel-default">
        <%= content_tag :div, :class => "panel-body" do %>
            <%- model_class = User -%>
            <dl class="dl-horizontal">
                <dt><strong><%= model_class.human_attribute_name(:group_id) %>:</strong></dt>
                <dd><%= @user.group.try(:name) %></dd>
                <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
                <dd><%= @user.name %></dd>
                <dt><strong><%= model_class.human_attribute_name(:nickname) %>:</strong></dt>
                <dd><%= @user.nickname %></dd>
                <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
                <dd><%= @user.email %></dd>
                <dt><strong><%= model_class.human_attribute_name(:image) %>:</strong></dt>
                <dd><%= @user.image %></dd>
                <dt><strong><%= model_class.human_attribute_name(:provider) %>:</strong></dt>
                <dd><%= @user.provider %></dd>
                <dt><strong>
                    <%= model_class.human_attribute_name(:sign_in_count) %>:
                </strong></dt>
                <dd><%= @user.sign_in_count %></dd>
                <dt><strong>
                    <%= model_class.human_attribute_name(:current_sign_in_ip) %>:
                </strong></dt>
                <dd><%= @user.current_sign_in_ip %></dd>
                <dt><strong>
                    <%= model_class.human_attribute_name(:last_sign_in_ip) %>:
                </strong></dt>
                <dd><%= @user.last_sign_in_ip %></dd>
            </dl>
            <div class="pull-left">
                <%= link_to t("helpers.links.back"),
                                users_path, :class => 'btn btn-default'  %>
                <% if !@user.system? %>
                    <%= link_to t("helpers.links.edit"),
                                edit_user_path(@user), :class => 'btn btn-primary' %>
                <% end %>
                <% if (current_user.id != @user.id && !@user.system?) %>
                    <%= delete_link(user_path(@user), t("users.links.delete_confirm")) %>
                <% end %>
            </div>
        <% end %>
    </div>
</div>
